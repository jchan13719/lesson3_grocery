<mvc:View controllerName="grocery.controller.List"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>list}">
        <content>
             <Label id="nameLabel" />
             	<List
                    id="groceryList"
                    headerText="Grocery Items"
                    items="{
                        path: '/items'
                    }" 
                     updateStarted="startLoadNewChunk"
                    updateFinished="endLoadNewChunk"
                    growing="true">
                    <StandardListItem
                        title="{name}"
                        counter="{quantity}"/>
                </List>
        </content>
    </Page>
</mvc:View>
